<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ActionBarStyle" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/img_board</item>
        <item name="android:background">@drawable/img_board</item>
    </style>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/ActionBarStyle</item>
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="BaseTheme"></style>

    <style name="card_word">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/card_word_text_size</item>
        <item name="android:textColor">@color/card_text_color</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="card_mean">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/card_mean_text_size</item>
        <item name="android:textColor">@color/card_text_color</item>
    </style>

    <style name="card_phonetically">
        <item name="android:textSize">@dimen/card_phonetically_text_size</item>
        <item name="android:textColor">@color/card_text_color</item>
    </style>

    <style name="card_word_type">
        <item name="android:textSize">@dimen/card_word_type_text_size</item>
        <item name="android:textColor">@color/card_text_color</item>
    </style>

    <style name="card_eng_mean">
        <item name="android:textSize">@dimen/card_eng_mean_text_size</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/card_text_color</item>
        <item name="android:background">@drawable/card_word_eng_mean_background</item>
    </style>

    <style name="wordidentity_word" parent="@style/text_view_shadow_black">
        <item name="android:textSize">@dimen/wordidentity_word_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="wordidentity_position" parent="@style/text_view_shadow_black">
        <item name="android:textSize">@dimen/common_textsize_large</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="wordidentity_answer">
        <item name="android:textSize">@dimen/wordidentity_answer_text_size</item>
        <item name="android:textColor">@color/card_text_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/wordidentity_answer_frame_padding</item>
    </style>

    <style name="wordwriting_question">
        <item name="android:textSize">@dimen/wordwriting_question_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/wordwriting_question_padding</item>
    </style>

    <style name="test_timer">
        <item name="android:textSize">@dimen/test_timer_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/timer_background</item>
        <item name="android:padding">@dimen/common_margin_layout</item>
    </style>

    <style name="home_test_button" parent="@style/text_view_shadow_black">
        <item name="android:background">@drawable/test_button</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/common_margin_layout_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/home_test_button_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="home_pick_button" parent="@style/text_view_shadow_black">
        <item name="android:background">@drawable/blue_button</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/common_margin_layout</item>
        <item name="android:textSize">@dimen/home_pick_button_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="splash_application_name" parent="@style/text_view_shadow_black">
        <item name="android:gravity">center</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">@dimen/splash_application_name_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_view_shadow_black">
        <item name="android:shadowDx">-1</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:shadowColor">@color/black</item>
    </style>

    <style name="text_view_shadow_white">
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:shadowColor">@color/white</item>
    </style>

    <style name="card_pick_guide_text" parent="@style/text_view_shadow_black">
        <item name="android:textSize">@dimen/card_picker_guide_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="home_guide_text_style" parent="@style/text_view_shadow_black">
        <item name="android:textSize">@dimen/home_guide_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="progressbar_horizontal" parent="android:Widget.ProgressBar.Horizontal" />

    <style name="button_blue_white_text">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/blue_button</item>
    </style>

    <style name="AppThemToolBar" parent="Theme.AppCompat.Light.NoActionBar"></style>

    <style name="ThemeToolbarDarkOverflow" parent="Theme.AppCompat.NoActionBar">

        <item name="android:textColorPrimary">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>

    </style>

    <style name="GenericProgressIndicator" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
    </style>


</resources>