<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin_layout_medium"
                android:gravity="center"
                android:text="@string/test_result_all_label" />

            <com.thanhle.englishvocabulary.view.ProgressWheel
                android:id="@+id/progressBar1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ProgressWheel:barColor="@color/progress_bar_color_blue"
                ProgressWheel:barWidth="@dimen/test_result_progress_bar_width"
                ProgressWheel:rimColor="@color/progress_bar_rim_color"
                ProgressWheel:rimWidth="@dimen/test_result_progress_bar_rim_width"
                ProgressWheel:textColor="@color/black"
                ProgressWheel:textSize="@dimen/test_result_progress_bar_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin_layout_medium"
                android:gravity="center"
                android:text="@string/test_result_current_label" />

            <com.thanhle.englishvocabulary.view.ProgressWheel
                android:id="@+id/progressBar2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ProgressWheel:barColor="@color/progress_bar_color_green"
                ProgressWheel:barWidth="@dimen/test_result_progress_bar_width"
                ProgressWheel:rimColor="@color/progress_bar_rim_color"
                ProgressWheel:rimWidth="@dimen/test_result_progress_bar_rim_width"
                ProgressWheel:textColor="@color/black"
                ProgressWheel:textSize="@dimen/test_result_progress_bar_text_size" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvProgressBar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_margin_layout_large"
        android:gravity="center" />

</LinearLayout>