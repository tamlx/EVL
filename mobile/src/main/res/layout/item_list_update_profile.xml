<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_library_name_update_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000 word commont"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </RelativeLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">


            <TextView
                android:id="@+id/tvWordLearn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/update_profile_number_word_learn"
                android:textColor="@color/black"
                android:textSize="13dp" />


            <ProgressBar
                android:id="@+id/progressBar_word_learn"
                style="@style/progressbar_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progress="30"
                android:layout_below="@id/tvWordLearn"
                android:layout_margin="@dimen/common_margin_layout_medium"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_number_word_learn_percent_update_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/progressBar_word_learn"
                android:layout_marginLeft="15dp"
                android:text="30%"
                android:textColor="@color/black"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_number_word_learn_update_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/progressBar_word_learn"
                android:layout_marginRight="15dp"
                android:text="100"
                android:textColor="@color/black"
                android:textSize="13dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/tvWordForget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/update_profile_number_word_forget"
                android:textColor="@color/black"
                android:textSize="13dp" />


            <ProgressBar
                android:id="@+id/progressBar_word_forget"
                style="@style/progressbar_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvWordForget"
                android:layout_margin="@dimen/common_margin_layout_medium"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_number_word_forget_update_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/progressBar_word_forget"
                android:layout_marginRight="15dp"
                android:text="100"
                android:textColor="@color/black"
                android:textSize="13dp" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>