<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Trang thai binh thuong -->
    <item android:state_enabled="true" android:state_pressed="false" android:state_selected="false"><shape android:shape="rectangle">
            <solid android:color="@color/white" />

            <corners android:radius="3dp" />

            <stroke android:width="2px" android:color="@color/button_background_color" />
        </shape></item>
        
    <!-- Trang thai click -->
    <item android:state_enabled="true" android:state_pressed="true" android:state_selected="false"><shape android:shape="rectangle">
            <solid android:color="@color/button_background_color" />

            <corners android:radius="3dp" />
        </shape></item>
        
    <!-- Trang thai selected (correct answer) -->
    <item android:state_enabled="true" android:state_selected="true"><shape android:shape="rectangle">
            <solid android:color="@color/button_background_color" />

            <corners android:radius="3dp" />

            <stroke android:width="2px" android:color="@color/button_background_color" />
        </shape></item>
        
    <!-- Trang thai enabled = false (incorrect answer) -->
    <item android:state_enabled="false"><shape android:shape="rectangle">
            <solid android:color="@color/bright_red" />

            <corners android:radius="3dp" />

            <stroke android:width="2px" android:color="@color/button_background_disable_color" />
        </shape></item>

</selector>